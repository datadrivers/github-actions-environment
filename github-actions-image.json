{
    "builders": [
        {
            "type": "amazon-ebs",
            "region": "eu-central-1",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
                    "root-device-type": "ebs"
                },
                "owners": ["099720109477"],
                "most_recent": true
            },
            "subnet_filter": {
                "filters": {
                    "tag:PackerBuild": "true"
                },
                "random": true
            },
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "encrypted": "true",
                    "volume_size": 24,
                    "delete_on_termination": true
                }
            ],
            "associate_public_ip_address": true,
            "instance_type": "c5.large",
            "ssh_username": "ubuntu",
            "ami_name": "smartlyio/github-actions-runner/ubuntu-18.04-{{timestamp}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "# Wait for machine to be fully initialized",
                "sleep 30"
            ]
        },
        {
            "type": "shell",
            "scripts": [
                "./apt-upgrade.sh",
                "./install-base-tools.sh",
                "./install-github-tools.sh",
                "./setup-user.sh"
            ],
            "execute_command": "sudo /bin/bash -ex {{ .Path }}"
        }
    ]
}
